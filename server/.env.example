# Server environment (Render / Node)
# Copy to server/.env for local dev. On Render, set these in the dashboard
# or via render.yaml.

# Allowed frontend origins for CORS (comma-separated)
FRONTEND_URL="https://your-frontend.web.app,https://your-domain.com"

# Supabase service credentials (server-side)
SUPABASE_URL="https://YOUR-PROJECT.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="YOUR_SERVICE_ROLE_KEY"

# Emails
# Opción A (recomendada): Resend API (no usa SMTP)
# RESEND_API_KEY="YOUR_RESEND_API_KEY"
# SMTP_FROM="Ciclo Market <notificaciones@your-domain.com>"
# SMTP_LOGGER=true

# Opción B: SMTP (si tu PaaS permite salida SMTP)
# SMTP_ENABLED=true
# SMTP_HOST="smtp.resend.com"
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER="resend"
# SMTP_PASSWORD="YOUR_RESEND_API_KEY"
# SMTP_FROM="Ciclo Market <notificaciones@your-domain.com>"
# SMTP_LOGGER=true

# Optional image used in OG when a listing has no image
# SHARE_FALLBACK_IMAGE="https://your-domain.com/og-preview.png"

# Mercado Pago (si aplica)
# MERCADOPAGO_ACCESS_TOKEN="YOUR_MP_ACCESS_TOKEN"

# Recordatorios de reseñas
# REVIEW_REMINDER_ENABLED=true
# REVIEW_REMINDER_CRON="0 10 * * *"  # diario 10:00
# REVIEW_REMINDER_BATCH_LIMIT=500
# REVIEW_REMINDER_TZ="America/Argentina/Buenos_Aires"
