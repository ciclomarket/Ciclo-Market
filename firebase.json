{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/index.html",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
        ]
      },
      {
        "source": "/assets/**",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      }
    ],
    "redirects": [
      {
        "source": "/share/listing/:id",
        "destination": "https://www.ciclomarket.ar/share/listing/:id",
        "type": 302
      },
      { "source": "/marketplace/bicicletas-de-ruta", "destination": "/marketplace?cat=Ruta", "type": 301 },
      { "source": "/marketplace/mtb", "destination": "/marketplace?cat=MTB", "type": 301 },
      { "source": "/marketplace/urbana", "destination": "/marketplace?cat=Urbana", "type": 301 },
      { "source": "/marketplace/fixie", "destination": "/marketplace?cat=Fixie", "type": 301 },
      { "source": "/marketplace/triatlon", "destination": "/marketplace?cat=Triatl%C3%B3n", "type": 301 },
      { "source": "/marketplace/e-bike", "destination": "/marketplace?cat=E-Bike", "type": 301 },
      { "source": "/marketplace/pista", "destination": "/marketplace?cat=Pista", "type": 301 },
      { "source": "/marketplace/accesorios", "destination": "/marketplace?cat=Accesorios", "type": 301 },
      { "source": "/marketplace/indumentaria", "destination": "/marketplace?cat=Indumentaria", "type": 301 },
      {
        "source": "/sitemap.xml",
        "destination": "https://www.ciclomarket.ar/sitemap.xml",
        "type": 301
      },
      {
        "source": "/sitemap-static.xml",
        "destination": "https://www.ciclomarket.ar/sitemap-static.xml",
        "type": 301
      },
      {
        "source": "/sitemap-stores.xml",
        "destination": "https://www.ciclomarket.ar/sitemap-stores.xml",
        "type": 301
      },
      {
        "source": "/sitemap-categories.xml",
        "destination": "https://www.ciclomarket.ar/sitemap-categories.xml",
        "type": 301
      },
      {
        "source": "/sitemap-listings-:page.xml",
        "destination": "https://www.ciclomarket.ar/sitemap-listings-:page.xml",
        "type": 301
      }
    ],
    "rewrites": [
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
