{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/storage/v1/render/image/**",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=2592000, s-maxage=2592000, immutable" }
        ]
      },
      {
        "source": "/index.html",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
        ]
      },
      {
        "source": "**/*.{png,jpg,jpeg,webp,svg,gif}",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      },
      {
        "source": "/assets/**",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      },
      {
        "source": "/admin/assets/**",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      }
    ],
    "redirects": [
      {
        "source": "/share/listing/:id",
        "destination": "https://ciclo-market.onrender.com/share/listing/:id",
        "type": 302
      },
      { "source": "/marketplace/bicicletas-de-ruta", "destination": "/marketplace?cat=Ruta", "type": 301 },
      { "source": "/marketplace/mtb", "destination": "/marketplace?cat=MTB", "type": 301 },
      { "source": "/marketplace/urbana", "destination": "/marketplace?cat=Urbana", "type": 301 },
      { "source": "/marketplace/fixie", "destination": "/marketplace?cat=Fixie", "type": 301 },
      { "source": "/marketplace/triatlon", "destination": "/marketplace?cat=Triatl%C3%B3n", "type": 301 },
      { "source": "/marketplace/e-bike", "destination": "/marketplace?cat=E-Bike", "type": 301 },
      { "source": "/marketplace/pista", "destination": "/marketplace?cat=Pista", "type": 301 },
      { "source": "/marketplace/accesorios", "destination": "/marketplace?cat=Accesorios", "type": 301 },
      { "source": "/marketplace/indumentaria", "destination": "/marketplace?cat=Indumentaria", "type": 301 }
    ],
    "rewrites": [
      { "source": "/storage/v1/render/image/**", "function": "imageProxy" },
      { "source": "/sitemap.xml", "function": "sitemapProxy" },
      { "source": "/sitemap-static.xml", "function": "sitemapProxy" },
      { "source": "/sitemap-stores.xml", "function": "sitemapProxy" },
      { "source": "/sitemap-categories.xml", "function": "sitemapProxy" },
      { "source": "/sitemap-blog.xml", "function": "sitemapProxy" },
      { "source": "/sitemap-shopping.xml", "function": "sitemapProxy" },
      { "source": "/sitemap-listings-:page.xml", "function": "sitemapProxy" },
      { "source": "/merchant-feed.xml", "function": "sitemapProxy" },
      { "source": "/blog/**", "function": "shareBlog" },
      { "source": "/listing/**", "function": "shareListing" },
      { "source": "/tienda/**", "function": "shareStore" },
      { "source": "/admin/**", "destination": "/admin/index.html" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
